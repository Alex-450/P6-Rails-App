<% if @activity.errors.any? %>
    <div class="alert alert-primary alert-dismissable fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <%= pluralize(@activity.errors.count, "error") %> prevented this activity from being saved:
        <ul>
          <% @activity.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
<% end %>
<div class="container-fluid activity-cover p-4">
    <div class="container text-center generic-title">
        <div class="row justify-content-center p-2">
            <h1>New Activity</h1>
        </div>
    </div>

    <div>
        <%= render 'form', activity: @activity %>
    </div>

    <div class="row my-3 justify-content-center">
        <%= link_to '← Back to activities', activities_path, class: "generic-button-secondary" %>
    </div>
</div>
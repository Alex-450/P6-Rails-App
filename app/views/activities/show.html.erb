<div class="container-fluid generic-container p-3 d-flex justify-content-center">
    <div class="card generic-card border-dark">
        <div class="card-header text-center border-dark">
            <h1><%= @activity.name %></h1>
        </div>
        <div class="card-body">
            <div class="card-title">
                <h2><%= @activitytype.name %></h2>
            </div>
                <p>Activity time: <%=  duration(@activity.started_at, @activity.ended_at) %><p>
                <p>Date: <%= displayDate %></p>
                <p>Activity started: <%= displayStartedTime %></p>
                <p>Activity ended: <%= displayEndTime %></p>
            </div>
            <div class="card-footer text-center border-dark">
                <p>Options:<p>
                <%= link_to 'Edit', edit_activity_path(@activity), class: "btn btn-primary btn-md" %>
                <%= link_to 'Back', activities_path, class: "btn btn-secondary btn-md" %>
                <%= link_to 'Delete activity', @activity, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-md" %>
            </div>
        </div>
    </div>
</div>

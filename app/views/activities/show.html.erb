<div class="activity-cover p-4">
<div class="container-fluid p-3 d-flex justify-content-center">
    <div class="card generic-card border-dark">
        <div class="card-header text-center border-dark">
            <h1><%= @activity.name %></h1>
        </div>
        <div class="card-body text-center">
            <div class="card-title">
                <h2><%= @activitytype.name %></h2>
            </div>
                <p>Activity time: <%=  duration(@activity.started_at, @activity.ended_at) %><p>
                <p>Date: <%= displayDate(@activity.date) %></p>
                <p>Activity started: <%= displayTime(@activity.started_at) %></p>
                <p>Activity ended: <%= displayTime(@activity.ended_at) %></p>
            </div>
            <div class="card-footer text-center border-dark">
                <div class="row justify-content-center">
                    <div class="col-12 text-center">
                        <p>Options:<p>
                    </div>
                    <div class="col-12 m-3">
                        <%= link_to 'Edit →', edit_activity_path(@activity), class: "generic-button" %>
                    </div>
                    <div class="col-12 m-3">
                        <%= link_to '← Back', activities_path, class: "generic-button" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<p id="notice"><%= notice %></p>

<h1><%= @activity.name %></h1>
<p><%= @activity.date %></p>
<p><%= @activity.started_at %></p>
<p><%= @activity.ended_at %></p>

<p><%= duration(@activity.started_at, @activity.ended_at) %><p>

<%= link_to 'Edit', edit_activity_path(@activity) %> |
<%= link_to 'Back', activities_path %> |
<%= link_to 'Delete activity', @activity, method: :delete, data: { confirm: 'Are you sure?' } %>

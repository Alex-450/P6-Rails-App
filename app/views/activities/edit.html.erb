<div class="container-fluid p-5">
    <h1>Editing Activity</h1>

    <%= render 'form', activity: @activity %>


    <div class="container-fluid my-3">
        <h5>Other options:</h5>
        <%= link_to 'Show', @activity, class: "btn btn-success btn-md" %>
        <%= link_to 'Back', activities_path, class: "btn btn-secondary btn-md" %>
        <%= link_to 'Delete activity', @activity, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-md" %>
    </div>
</div>

<div class="activity-cover p-4">
  <div class="container text-center generic-title">
    <div class="row justify-content-center p-2">
      <h1>My Activities</h1>
    </div>
  </div>

  <% if activityCount == 0 %>
<div class="p-4">
  <div class="form-container container p-4">
    <div class="row justify-content-center text-center p-2">
      <p>Your activities will appear here</p>
    </div>
    <div class="row justify-content-center text-center">
      <p>Tap below to record your first activity</p>
    </div>
    <div class="row justify-content-center mb-3">
        <%= link_to 'New Activity', new_activity_path, class: "generic-button" %>
      </div>
    </div>
  </div>
</div>
  
  <% else %>
<div class="p-4">
    <div class="form-container container p-4">
      <div class="row justify-content-center m-3">
      <%= link_to 'New Activity →', new_activity_path, class: "generic-button" %>
    </div>
    <div class="row">
      <% @activities.each do |activity| %>
        <div class="col-sm-6">
          <div class="card generic-card mb-3 text-center">
            <div class="card-header">
              <h5><%= activity.name %></h5>
            </div>
            <div class="card-body">
              <p><%= displayDate(activity.date) %></p>
              <p><%= ActivityType.find_by(id: activity.activity_type_id).name %></p>
              <%= link_to 'View →', activity, class: "generic-button" %>
            </div>
          </div>
        </div>
        <% end %>
    </div>
  </div>
</div>
</div>
</div>
<% end %>
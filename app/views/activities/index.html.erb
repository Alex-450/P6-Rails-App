<div class="container-fluid generic-container p-3">
  <div class="row justify-content-center">
    <h1>My Activities</h1>
  </div>

  <% if activityCount == 0 %>
  <div class="border border-dark p-3 my-3 mx-5">
    <div class="row justify-content-center text-center">
      <p>Your activities will appear here</p>
    </div>
    <div class="row justify-content-center text-center">
      <p>Tap below to record your first activity</p>
    </div>
    <div class="row justify-content-center mb-3">
        <%= link_to 'New Activity', new_activity_path, class: "btn btn-primary btn-md" %>
      </div>
  </div>
</div>
</div>
  
  <% else %>
    <div class="row mb-3 justify-content-center">
      <%= link_to 'New Activity', new_activity_path, class: "btn btn-primary btn-md" %>
    </div>
    <div class="row">
      <% @activities.each do |activity| %>
        <div class="col-sm-6">
          <div class="card generic-card mb-3 text-center">
            <div class="card-header">
              <h5><%= activity.name %></h5>
            </div>
            <div class="card-body">
              <p><%= activity.date %></p>
              <%= link_to 'View', activity, class: "btn btn-primary btn-md" %>
            </div>
          </div>
        </div>
        <% end %>
    </div>
</div>
</div>
<% end %>
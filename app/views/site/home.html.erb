<div class="jumbotron align-items-center">
    <div class="jumbotron-title">
        <h1> GROOVE | MOVE</h1>
        <p>Get your Groove on</p>
    </div>
    
    <% if !user_signed_in? %>

    <div class="container p-4 mt-5 jumbotron-text text-center">
        <div class="row justify-content-center">
            <div class="col-sm-4">
                <h5 class="mb-3">New to Groove?</h5>
                <%= link_to "Sign up", "/users/sign_up", class: "generic-button" %>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-sm-4 p-4">
                <h5 class="mb-3">Already have an account?</h5>
                <%= link_to "Log in", "/users/sign_in", class: "generic-button" %>
            </div>
        </div>
    </div>

    <% else %>

    <div class="container p-4 mt-5 jumbotron-text text-center">
        <div class="row justify-content-center">
            <div class="col-sm-4 col-md-6 p-4">
                <h5 class="mb-3">Track all of your fitness habits right here</h5>
                <%= link_to "Record activities", "/activities", class: "generic-button" %>
            </div>
        </div>
    </div>
    
    <% end %>
</div>
<div class="jumbotron">
    <div class="container text-center jumbotron-title p-2">
        <div class="row justify-content-center">
            <div class="col-12">
                <h1>GROOVE</h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12">
                <h1>+ MOVE</h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12">
                <h5>Get your Groove on</h5>
            </div>
        </div>
    </div>
    
    <% if !user_signed_in? %>

    <div class="container p-4 mt-5 jumbotron-text text-center">
        <div class="row justify-content-center">
            <h5 class="mb-3">Track all of your fitness habits right here</h5>
        </div>
        <div class="row justify-content-center text-center pb-2">
            <h5>New to Groove?</h5>
        </div>
        <div class="row justify-content-center pb-3">
            <%= link_to "Sign up →", "/users/sign_up", class: "generic-button" %>
        </div>
        <div class="row justify-content-center pb-2">
            <h5>Already have an account?</h5>
        </div>
        <div class="row justify-content-center">
            <%= link_to "Log in →", "/users/sign_in", class: "generic-button" %>
        </div>
    </div>

    <% else %>

    <div class="container p-4 mt-5 jumbotron-text text-center">
        <div class="row justify-content-center">
            <h5 class="mb-3">Track all of your fitness habits right here</h5>
        </div>
        <div class="row justify-content-center">
            <%= link_to "Record activities →", "/activities/new", class: "generic-button my-2 mx-2" %>
            <%= link_to "View activities →", "/activities", class: "generic-button my-2" %>
        </div>
    </div>
    </div>
    
    <% end %>
</div>
<div class="sign-up-cover p-4">
  <div class="form-container container h-50 w-75 p-4">  
        <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
            <%= f.label :name, class: "font-weight-bold" %><br />
            <%= f.text_field :name, autofocus: true, placeholder: "Enter name", class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :email, class: "font-weight-bold" %><br />
            <%= f.email_field :email, autocomplete: "email", placeholder: "Enter email", class: "form-control"%>
        </div>

        <div class="form-group">
            <%= f.label :password, class: "font-weight-bold" %>
            <% if @minimum_password_length %>
            <p class="profile-subtitle">(<%= @minimum_password_length %> characters minimum)</p>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter password", class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :password_confirmation, class: "font-weight-bold" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "form-control" %>
          </div>

        <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-primary btn-md generic-button" %>
        </div>
        <% end %>
    <div class="mt-4 justify-content-center">
    <h4>Already have an account?</h4>
    <%= render "devise/shared/links" %>
    </div>
</div>
</div>


